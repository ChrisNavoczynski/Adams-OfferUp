{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "jsx-a11y/label-has-associated-control": 0,
        "no-unused-vars": ["warn"],
        "react/jsx-filename-extension": ["off"],
        "react/prefer-stateless-function": ["warn"],
        "react/destructuring-assignment": ["warn"],
        "react/prop-types": ["warn"] 
    }
}
